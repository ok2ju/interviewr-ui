  script(type='text/javascript').
    document.querySelector( ".acc-photo-link" ).
        addEventListener( "click", function() {
          document.querySelector( ".header-nav" ).classList.toggle( "active" );
          var svgElements = document.getElementsByTagName('svg');
          var testElements = document.querySelectorAll('.navbar-ico');

          for(var i = 0; i < svgElements.length; i++) {
            svgElements[i].classList.toggle('hide-svg');
            testElements[i].classList.toggle('show-text');
          }
        });

    document.querySelector('.set-interview-date').
      addEventListener('click', function() {
        document.querySelector('.modal').classList.toggle('is-visible');
      });

    document.querySelector('.modal-close-btn').
      addEventListener('click', function() {
        document.querySelector('.modal').classList.remove('is-visible');
      });

    document.querySelector('.modal-close-btn').
      addEventListener('keyup', function(event) {
        if(event.keyCode === 27) {
          document.querySelector('.modal').classList.remove('is-visible');
        }
      });

    document.querySelector('.projects-head').
      addEventListener('click', function() {
        document.querySelector('.drop-projects').classList.toggle('closed');
        document.querySelector('.projects-content').classList.toggle('closed');
      });
